{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/biome/core"],
  "files": {
    "includes": ["!src/components/ui"],
    "ignoreUnknown": true
  },
  "linter": {
    "rules": {
      "style": {
        "useFilenamingConvention": {
          "level": "off"
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  }
}
